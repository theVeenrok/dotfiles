[[ -o interactive ]] || return

ZDOT="$XDG_CONFIG_HOME/zsh"

setopt EXTENDED_GLOB

mkdir -p "$XDG_CACHE_HOME/zsh"
zcompdump="$XDG_CACHE_HOME/zsh/zcompdump-$ZSH_VERSION"
autoload -Uz compinit && compinit -C -d "$zcompdump"


for file in "$ZDOT"/aliases/*.zsh(N); do
  source $file
done

for file in "$ZDOT"/conf.d/*.zsh(N); do
  source $file
done

